/* detail.wxss */

.detail-container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #f9f9f9;
  box-sizing: border-box;
}

/* 标题样式（加粗、居中、字体放大） */
.detail-title {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
  text-align: center;
  margin-bottom: 15rpx;
  line-height: 50rpx;
  /* 标题超长时换行 */
  white-space: normal;
}

/* 时间显示样式 */
.detail-time {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  margin-bottom: 20rpx;
}

/* 分割线 */
.detail-divider {
  height: 2px;
  background-color: #eee;
  margin-bottom: 30rpx;
}

/* 内容显示样式 */
.detail-content {
  font-size: 28rpx;
  color: #333;
  line-height: 50rpx;
  min-height: calc(100vh - 200rpx);
  white-space: pre-wrap; /* 保留换行和空格 */
  padding: 10rpx;
}

/* 内容为空时的提示 */
.empty-content {
  font-size: 28rpx;
  color: #999;
  text-align: center;
  padding: 50rpx 0;
}
/* 其他样式保持不变 */

.memo-content {
  font-size: 28rpx;
  color: #666;
  line-height: 45rpx;
  margin-right: 40rpx;
  margin-bottom: 15rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all; /* 新增：确保长单词/字符能换行 */
}