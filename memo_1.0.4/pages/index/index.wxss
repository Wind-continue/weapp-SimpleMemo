/* index.wxss */

.container {
  padding: 20rpx;
  box-sizing: border-box;
}

/* 新增按钮样式 */
.toggle-btn {
  width: 100rpx !important;  
  height: 100rpx !important; 
  border-radius: 50%;
  background: #07c160;
  color: white;
  font-size: 60rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  bottom: 40rpx;
  right: 40rpx; 
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
  padding: 0 !important;    
  margin: 0 !important;     
  border: none !important;  
  z-index: 10;             
}

/* 输入区域样式：新增标题输入框样式 */
.input-area {
  margin-bottom: 30rpx;
}
/* 标题输入框 */
.title-input {
  width: 100%;
  height: 60rpx;
  border: 1px solid #eee;
  border-radius: 10rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  margin-bottom: 15rpx;
  font-size: 28rpx;
  font-weight: 500;
}
/* 内容输入框（原input改为content-input） */
.content-input {
  width: 100%;
  min-height: 150rpx;
  border: 1px solid #eee;
  border-radius: 10rpx;
  padding: 20rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}
/* 按钮容器 */
.btn-group {
  display: flex;
  gap: 20rpx;
}
.cancel-btn {
  flex: 1;
  background: #ff4d4f;
  color: white;
  font-size: 28rpx;
}
.add-btn {
  flex: 1;
  background: #07c160;
  color: white;
  font-size: 28rpx;
}

/* 备忘录列表样式 */
.memo-list {
  margin-bottom: 120rpx;
}
.empty {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 100rpx 0;
}

/* 备忘录条目样式 */
.memo-item {
  position: relative;
  padding: 20rpx 15rpx; /* 增加内边距，适配标题 */
  border-bottom: 1px solid #c7c6c6;
  margin-bottom: 15rpx;
  background: white;
  border-radius: 15rpx;
  box-shadow: 0 6rpx 8rpx rgba(0,0,0,0.05);
  transition: all 0.2s;
}
.memo-item:active {
  background-color: #f5f5f5;
}

/* 标题样式（加粗、字体略大） */
.memo-title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-right: 40rpx; /* 给删除按钮留空间 */
  margin-bottom: 10rpx;
  line-height: 45rpx;
  /* 标题超长时单行省略 */
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 分割线 */
.index-divider{
  height: 2px;
  background-color: #eee;
  margin-bottom: 5rpx;
}

/* 内容样式 */
.memo-content {
  font-size: 28rpx;
  color: #666; /* 内容颜色调浅，与标题区分 */
  line-height: 45rpx;
  margin-right: 40rpx;
  margin-bottom: 15rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.memo-time {
  font-size: 22rpx;
  color: #999;
  text-align: left;
}

/* 删除按钮样式 */
.delete-btn {
  position: absolute;
  top: 20rpx; /* 调整删除按钮位置，适配标题 */
  right: 10rpx;
  width: 30rpx !important;  
  height: 30rpx !important; 
  padding: 0;
  margin: 0;
  font-size: 30rpx;
  color: #ccc; 
  background: transparent; 
  display: flex;
  align-items: center;
  justify-content: center;
}
.delete-btn_active {
  color: #ff4d4f; 
}