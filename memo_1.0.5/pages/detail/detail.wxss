/* detail.wxss */

.detail-container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #f9f9f9;
  box-sizing: border-box;
}

/* 标题样式（加粗、居中、字体放大） */
.detail-title {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
  text-align: center;
  margin-bottom: 15rpx;
  line-height: 50rpx;
  /* 标题超长时换行 */
  white-space: normal;
}

/* 时间显示样式 */
.detail-time {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  margin-bottom: 20rpx;
}

/* 分割线 */
.detail-divider {
  height: 2px;
  background-color: #eee;
  margin-bottom: 0rpx;
}

/* 内容显示样式 */
.detail-content {
  font-size: 28rpx;
  color: #333;
  line-height: 50rpx;
  margin-bottom: 20rpx;
  white-space: pre-wrap; /* 保留换行和空格 */
  padding: 0 10rpx;
}

/* 内容为空时的提示 */
.empty-content {
  font-size: 28rpx;
  color: #999;
  text-align: center;
  padding: 50rpx 0;
}

/* 详情页图片标题 */
.detail-img-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 15rpx;
  display: block;
}

/* 核心修复：图片列表容器（确保网格布局无间隙问题） */
.detail-img-list {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx; /* 固定间距，避免自适应误差 */
  /* 关键：计算容器总宽度，确保3列布局均匀 */
  width: 100%;
  box-sizing: border-box;
}

/* 核心修复：缩略图样式（确保尺寸100%统一） */
.detail-img {
  /* 1. 精确计算宽度：3列布局，减去2个间距（15rpx*2） */
  width: calc((100% - 15rpx * 2) / 3); 
  /* 2. 固定高度：所有图片高度一致，避免尺寸差异 */
  height: 225rpx !important; /* !important 确保优先级，覆盖默认样式 */
  /* 3. 保持长宽比：按比例填充容器，超出部分裁剪（不拉伸） */
  object-fit: cover; 
  /* 4. 消除内边距/边框影响 */
  padding: 0 !important;
  margin: 0 !important;
  border: none !important;
  /* 5. 圆角优化，增强视觉统一感 */
  border-radius: 8rpx;
  /* 6. 确保图片加载完成前占位，避免布局跳动 */
  background-color: #f5f5f5;
  /* 7. 交互反馈 */
  transition: opacity 0.2s ease;
}

/* 图片点击反馈 */
.detail-img:active {
  opacity: 0.8;
}

/* 文本内容 */
.memo-content {
  font-size: 28rpx;
  color: #666;
  line-height: 45rpx;
  margin-right: 40rpx;
  margin-bottom: 15rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all; /* 确保长单词/字符能换行 */
}